<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
        >

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/detail_padding">

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/experiment_add_group"/>


        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_gravity="fill_horizontal"
                android:id="@+id/experiment_add_group"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/experiment_add_scenario"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_horizontal"
                    android:spinnerMode="dialog"
                    android:id="@+id/experiment_add_scenario"/>

            <ImageButton
                    android:id="@+id/experiment_add_scenario_new"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@drawable/ic_action_add"
                    android:layout_alignParentRight="true"
                    android:contentDescription="@string/experiment_add_scenario"/>

        </RelativeLayout>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/experiment_add_subject"/>

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="fill_horizontal"
                    android:spinnerMode="dialog"
                    android:id="@+id/experiment_add_subject"/>

            <ImageButton
                    android:id="@+id/experiment_add_subject_new"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_action_person_add"
                    android:contentDescription="@string/experiment_add_subject"/>
        </RelativeLayout>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/experiment_add_artifact"/>


        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_gravity="fill_horizontal"
                android:id="@+id/experiment_add_artifact"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/experiment_add_digitization"/>


        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dialog"
                android:layout_gravity="fill_horizontal"
                android:id="@+id/experiment_add_digitization"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                >

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/time_from"
                    android:padding="@dimen/detail_padding"
                    android:gravity="center_vertical"/>

            <Button
                    android:id="@+id/experiment_add_from_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/detail_padding"
                    android:contentDescription="@string/time_choose_date"
                    android:text="@string/time_choose_date"
                    android:drawableLeft="@drawable/ic_action_date"
                    />

            <Button
                    android:id="@+id/experiment_add_from_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/detail_padding"
                    android:contentDescription="@string/time_choose_time"
                    android:text="@string/time_choose_time"
                    android:drawableLeft="@drawable/ic_action_time"
                    />

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                >

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/time_to"
                    android:padding="@dimen/detail_padding"
                    android:gravity="center_vertical"/>

            <Button
                    android:id="@+id/experiment_add_to_date"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/detail_padding"
                    android:contentDescription="@string/time_choose_date"
                    android:text="@string/time_choose_date"
                    android:drawableLeft="@drawable/ic_action_date"
                    />

            <Button
                    android:id="@+id/experiment_add_to_time"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="@dimen/detail_padding"
                    android:contentDescription="@string/time_choose_time"
                    android:text="@string/time_choose_time"
                    android:drawableLeft="@drawable/ic_action_time"
                    />

        </LinearLayout>


        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/experiment_env_note"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:id="@+id/experiment_add_env_note"/>

        <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/experiment_temperature"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:id="@+id/experiment_add_temperature"/>


        <Button
                android:id="@+id/experiment_add_hardware_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/experiment_add_hardware"/>

        <LinearLayout
                android:id="@+id/experiment_add_hardware_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_dark_frame"
                />

        <Button
                android:id="@+id/experiment_add_software_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/experiment_add_software"/>

        <LinearLayout
                android:id="@+id/experiment_add_software_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_dark_frame"
                />

        <Button
                android:id="@+id/experiment_add_disease_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/experiment_add_disease"/>

        <LinearLayout
                android:id="@+id/experiment_add_disease_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_dark_frame"
                />

        <Button
                android:id="@+id/experiment_add_pharmaceutical_button"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="@string/experiment_add_pharmaceuticals"/>

        <LinearLayout
                android:id="@+id/experiment_add_pharmaceutical_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@android:drawable/alert_dark_frame"
                />

    </LinearLayout>
</ScrollView>